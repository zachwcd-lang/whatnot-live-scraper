{
  "manifest_version": 3,
  "name": "Whatnot Live Scraper",
  "version": "1.0.0",
  "description": "Scrapes live sales data from Whatnot streaming platform",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "*://whatnot.com/*",
    "https://vvgjyvkjptgydqqwzked.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://whatnot.com/dashboard/live/*",
        "*://www.whatnot.com/dashboard/live/*",
        "https://whatnot.com/dashboard/live/*",
        "https://www.whatnot.com/dashboard/live/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
      ],
      "js": ["helper-content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Whatnot Live Scraper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ]
  }
}

